
@import "nib"

//resusables
.yscroll
  overflow-x: hidden
  overflow-y: auto

.italic
  font-style: italic

//main
body
  min-width: 650px

.sidebar-nav
  position: fixed
  height 100%
  width 200px
  .nav-list
    padding-top: 20px
    padding-bottom: 20px

.content-wrapper
  margin-left: 200px

//download
.download
  .buttons
    padding: 10px
  .disclaimer
    margin: 20px

.build-tool-content
  display: none

//share
.share-buttons
  padding 10px
  position fixed
  bottom 0
  right 0
  height 70px
  opacity 0.85
  &:hover
    opacity 1

//headers
h3,h5
  text-decoration: underline

//code blocks
#app pre, #app div[data-html]
  padding: 15px
  margin: 10px
  border: 1px solid rgba(0, 0, 0, 0.15)
  border-radius: 3px

//navs
.topic[data-nav]
  margin: 10px
  margin-bottom: 50px

.nav-item a
  transition: all 0.5s ease-out
  color: #08C
.nav-item.active a
  color: #EC9422
  font-weight: 500
  padding-left: 10px

.nav-section .nav-header
  transition: all 0.5s ease-out
  position: relative
.nav-section.active .nav-header
  left: 5px

//alerts
.alert
  margin: 10px
  display: inline-block
.alert strong
  font-style: italic

//links
a[data-link]
  cursor: pointer

//api table
.api-table td:nth-child(1)
  font-family: Courier


